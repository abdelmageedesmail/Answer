<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_start_game"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.team.answer.activities.StartGame">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/gawb_logo"/>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/choose_group"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#FFD600"
            android:text="الفريق الاصفر"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:id="@+id/yellowTeam"
            />


        <Button
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#EE1C25"
            android:text="الفريق الاحمر"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:id="@+id/redTeam"
            android:layout_weight="1"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#307C32"
            android:text="الفريق الاخضر"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_margin="25dp"
            android:id="@+id/greenTeam"/>


        <Button
            android:layout_margin="25dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="#1665C1"
            android:text="الفريق الازرق"
            android:textColor="#FFFF"
            android:textSize="20sp"
            android:layout_weight="1"
            android:id="@+id/blueTeam"
            />
    </LinearLayout>
</LinearLayout>
