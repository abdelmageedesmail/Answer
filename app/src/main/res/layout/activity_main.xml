<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    tools:context="com.team.answer.activities.MainActivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:background="@drawable/gawb_logo"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_margin="20dp"
        android:drawableRight="@mipmap/ic_startgame"
        android:padding="5dp"
        android:text="ابدأ اللعب"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:gravity="center"
        android:id="@+id/startPlay"/>


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_margin="20dp"
        android:drawableRight="@mipmap/ic_info"
        android:padding="5dp"
        android:text="عن اللعبه"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:gravity="center"
        android:id="@+id/aboutGame"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_shape"
        android:layout_margin="20dp"
        android:drawableRight="@mipmap/ic_exit"
        android:padding="5dp"
        android:text="الخروج"
        android:textSize="20sp"
        android:textColor="#ffff"
        android:gravity="center"
        android:id="@+id/logOut"/>

</LinearLayout>
